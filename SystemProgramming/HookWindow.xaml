<Window x:Class="SystemProgramming.HookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemProgramming"
        mc:Ignorable="d"
        Title="HookWindow" Height="450" Width="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" >
            <Button x:Name="StartkbHook" Margin="10" Click="StartkbHook_Click" Content="Start Keyboard Hook"/>
            <Button x:Name="StopkbHook" Margin="10" Click="StopkbHook_Click" Content="Stop Keyboard Hook"/>
        </StackPanel>
        <TextBlock x:Name="HookLogs"/>
    </StackPanel>
</Window>
